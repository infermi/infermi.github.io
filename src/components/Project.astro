---
const { title } = Astro.props;
const { pic } = Astro.props;
let { link } = Astro.props;
if (link == undefined) {
  link = "#";
}
---

<a
  href={`${link}`}
  class="flex flex-col items-center rounded-lg border border-gray-200 bg-white shadow hover:bg-gray-100 md:max-w-xl md:flex-row"
>
  <img
    class="h-96 w-full rounded-t-lg object-cover object-top md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
    src={`${pic}`}
    alt=""
  />
  <div class="flex flex-col justify-between p-4 leading-normal">
    <h5 class="mb-2 font-heebo text-2xl font-bold tracking-tight text-gray-900">
      {`${title}`}
    </h5>
    <p class="mb-3 font-varela font-normal text-gray-700"><slot /></p>
  </div>
</a>
