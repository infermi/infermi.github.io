---
export interface Props {
  pfp: string;
  name: string;
  video: string;
  website: string;
}

const { pfp, name, video, website } = Astro.props;
---

<div class="js-show-on-scroll mx-auto mb-4 sm:break-inside-avoid">
  <video src={`/reviews/${video}`} controls class="w-full rounded-xl"
    >דפדפן זה לא תומך בסרטונים</video
  >
  <a class="mt-4 flex items-center gap-4" href={website}>
    <img
      alt="pfp"
      loading="lazy"
      src={pfp}
      class="h-12 w-12 rounded-full object-cover"
    />

    <div class="text-sm">
      <p class="font-medium">{name.split("-")[0]}</p>
      <p class="mt-1">{name.split("-")[1]}</p>
    </div>
  </a>
</div>
