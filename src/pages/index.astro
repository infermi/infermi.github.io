import VideoReview from "../components/VideoReview.astro";
---

<!DOCTYPE html>
<!-- 
--rich-black: #091C26ff;
--teal: #147F85ff;
--fuchsia-rose: #CD5379ff; EXPIRIENCE
--caput-mortuum: #522528ff;
--rich-black-2: #03080Fff;  ABOUT
--sandy-brown: #FAAB55ff; SERVICES
--midnight-green: #0E404Bff;
 -->
<html lang="en" class="w-screen scroll-smooth scrollbar-hide" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="/me.jpg" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.css"
      rel="stylesheet"
    />
    <title>מאור רחמיאל</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fredoka&family=Heebo:wght@400;700;900&family=Open+Sans&family=Varela+Round&display=swap"
      rel="stylesheet"
    />

    <!-- ICONS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body class="w-screen overflow-x-hidden bg-bluegreen font-varela text-white">
    <Navbar />
    <div class="fixed top-20 z-[19] w-full bg-indigo-600 px-4 py-3 text-white">
      <p class="text-center text-sm font-medium">
        דף נחיתה מעוצב אישית רק ב <span class="text-base underline">500₪</span> &emsp;
        <a
          href="#contact"
          class="inline-block rounded-lg bg-white px-2 py-1 font-bold text-indigo-400 hover:bg-gray-300 lg:px-3 lg:py-2"
          >מעוניין?</a
        >
      </p>
    </div>

    <main class="pt-28">
      <!-- HEADER -->
      <div
        class="relative flex min-h-[75vh] w-full flex-col items-center justify-center text-center"
      >
        <div class="w-fit px-8 text-white">
          <h1
            class="text-center font-heebo text-4xl font-black text-gray-100 sm:text-5xl md:whitespace-nowrap md:text-6xl lg:text-8xl"
          >
            לא מצליח לקבל פניות?
            <!-- <a
              href="#contact"
              class="relative cursor-pointer font-black text-blue-500 before:absolute before:bottom-2 before:-right-[10%] before:-left-[10%] before:h-1 before:w-[120%] before:origin-right before:scale-x-0 before:bg-blue-500 before:transition before:duration-150 before:ease-in hover:before:scale-100 xl:before:h-3"
              >ככה</a
            >  -->
          </h1>
          <h3 class="mt-4 text-2xl md:text-4xl">
            קבל הרבה יותר לקוחות רלוונטים בעזרת אתר מעוצב אישית תוך פחות מ-5 ימי
            עסקים.
          </h3>

          <div
            class="mt-7 flex flex-row justify-center gap-5 font-heebo text-base font-bold lg:text-3xl"
          >
            <a
              data-ripple-light="true"
              href="#about"
              class="inline-block w-fit cursor-pointer rounded-md bg-blue-500 px-6 py-3 tracking-wider transition-all hover:scale-105 lg:px-9"
            >
              צור קשר
            </a>
          </div>
        </div>

        <img
          src="/background.png"
          alt=""
          class="absolute top-0 -z-10 h-full w-full object-cover object-center brightness-50"
        />
      </div>
      <!--  -->

      <!-- FEATURES -->
      <section
        id="features"
        class="px-18 w-full scroll-mt-20 bg-bluegreen p-5 text-center"
      >
        <div class="">
          <div
            class="mx-auto max-w-screen-xl items-center gap-16 py-8 px-4 lg:grid lg:grid-cols-2 lg:py-16 lg:px-6"
          >
            <div
              class="font-varela font-light text-gray-100 dark:text-gray-400 sm:text-lg"
            >
              <h2
                class="mb-4 font-heebo text-4xl font-extrabold tracking-tight text-white dark:text-white lg:text-6xl"
              >
                אתר <span class="font-black underline">שמושך לקוחות</span>
              </h2>
              <p class="mb-4">
                האתרים שאני בונה הם מעוצבים אישית מתאימים לכל מכשיר והכי חשוב, <span
                  class="underline">מושכים לקוחות</span
                ><br />
              </p>
            </div>
            <div class="mt-8 grid grid-cols-2 gap-4">
              <img
                class="js-show-on-scroll w-full rounded-lg"
                src="https://images.unsplash.com/photo-1572044162444-ad60f128bdea?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80&ar=9:12"
                alt="office content 1"
              />
              <img
                class="js-show-on-scroll mt-4 w-full rounded-lg lg:mt-10"
                src="https://images.unsplash.com/photo-1481487196290-c152efe083f5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1262&q=80&ar=9:12"
                alt="office content 2"
              />
            </div>
          </div>
        </div>

        <div class="mx-auto mt-20 mb-32 max-w-screen-xl text-center">
          <h2 class="mb-12 font-heebo text-4xl font-bold lg:text-5xl">
            למה זה כל כך <u class="text-apricot">שווה?</u>
          </h2>
          <div class="grid md:grid-cols-3 lg:gap-x-12">
            <div class="js-show-on-scroll mb-12 md:mb-0">
              <div
                class="mb-6 inline-block aspect-square w-fit rounded-full bg-blue-600 p-3 shadow-lg"
              >
                <i
                  class="fa-truck-fast fa-solid aspect-square text-[2.5em] text-white"
                ></i>
              </div>
              <h5 class="mb-4 text-lg font-bold">אתר מלא תוך 5 ימים</h5>
              <p class="text-gray-200">
                אני בונה אתרים במהירות ובאיכות כדי להבטיח נוחות עבור הלקוח
              </p>
            </div>

            <div class="js-show-on-scroll mb-12 md:mb-0">
              <div
                class="mb-6 inline-block aspect-square w-fit rounded-full bg-blue-600 p-3 shadow-lg"
              >
                <i
                  class="fa-wheelchair fa-solid aspect-square text-[2.5em] text-white"
                ></i>
              </div>
              <h5 class="mb-4 text-lg font-bold">אתר נגיש</h5>
              <p class="text-gray-200">
                האתרים שאני בונה נגישים וקלים לשימוש כדי להבטיח חווית משתמש
                מושלמת
              </p>
            </div>

            <div class="js-show-on-scroll mb-12 md:mb-0">
              <div
                class="mb-6 inline-block aspect-square w-fit rounded-full bg-blue-600 p-3 shadow-lg"
              >
                <i
                  class="fa-pen-nib fa-solid aspect-square text-[2.5em] text-white"
                ></i>
              </div>
              <h5 class="mb-4 text-lg font-bold">מעוצב אישית</h5>
              <p class="text-gray-200">
                האתרים שאני בונה הם מעוצבים אישית עבור העסק שלך כדי להבטיח אתר
                ממיר ומושך
              </p>
            </div>
          </div>
        </div>

        <div
          class="overflow-hidden bg-gray-700 bg-opacity-25 sm:grid sm:grid-cols-2 sm:items-center"
        >
          <div class="p-8 md:p-12 lg:px-16 lg:py-24">
            <div class="mx-auto max-w-2xl text-center sm:text-right">
              <h2 class="font-varela text-2xl font-bold text-white md:text-3xl">
                התחילו להציג את העסק שלכם בעולם הדיגיטלי היום
              </h2>

              <p class="hidden text-gray-200 md:mt-4 md:block xl:text-lg">
                אני מבין כמה חשוב להציג את העסק שלכם בצורה מקצועית ומרשימה בעולם
                הדיגיטלי של היום. משימתי היא לספק לכם את האתר המושלם, אני משלב
                את הידע והניסיון שלי בעיצוב ופיתוח אתרי אינטרנט כדי להבטיח
                שתוכלו להציג את העסק שלכם בצורה מושלמת ובסגנון שמתאים לכם.
              </p>

              <div class="mt-4 md:mt-8">
                <a
                  class="inline-block rounded bg-cta px-8 py-3 text-sm font-medium text-white transition hover:rotate-2 hover:scale-110 focus:outline-none focus:ring"
                  href="#contact"
                >
                  צרו קשר
                </a>
              </div>
            </div>
          </div>

          <img
            alt=""
            src="https://images.unsplash.com/photo-1499951360447-b19be8fe80f5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
            class="js-show-on-scroll h-full w-full object-cover sm:h-[calc(100%_-_2rem)] sm:self-end ltr:sm:rounded-tl-[30px] rtl:sm:rounded-tr-[30px] md:h-[calc(100%_-_4rem)] ltr:md:rounded-tl-[60px] rtl:md:rounded-tr-[60px]"
          />
        </div>
      </section>
      <!--  -->

      <div
        class="h-[400px] w-full bg-[url(/waves/3.svg)] bg-cover bg-repeat max-sm:h-[200px]"
      >
      </div>

      <!-- ABOUT -->
      <section
        id="about"
        class="px-18 js-show-on-scroll w-full scroll-mt-20 bg-apricot p-5 text-center"
      >
        <div class="mx-auto max-w-screen-xl">
          <div
            class="mx-auto flex w-full max-w-screen-xl flex-grow flex-col items-stretch justify-center gap-5 px-3 text-center md:flex-1 md:flex-row md:px-10"
          >
            <div class="order-1 w-full md:order-3 lg:w-7/12">
              <img
                src="/me.jpg"
                alt=""
                class="rounded-lg object-cover md:aspect-square"
              />
            </div>
            <div class="order-2 w-full">
              <h1
                class="font-heebo text-4xl font-black lg:text-7xl xl:text-5xl"
              >
                נעים להכיר
              </h1>
              <div
                class="mx-auto mt-3 max-w-5xl text-base sm:text-lg md:text-xl xl:text-2xl"
              >
                <p class="">
                  שמי מאור, אני רק בן 13 ואני בונה אתרים לבעלי עסקים קטנים
                  ובינוניים שרוצים אתר שממיר פניות רלונטיות. האתרים שאני בונה הם
                  מעוצבים אישית ורספונסיבים.
                </p>
                <p>
                  במהלך השנים, שיפרתי את היכולות שלי בבניית אתרים, בניתי מגוון
                  אתרים למגוון של בעלי עסקים, אז יש לי נסיון עם כל סוג של אתר
                  שהייתם רוצים
                </p>
              </div>

              <a
                data-ripple-light="true"
                href="#contact"
                class="order-4 mx-auto block w-fit rounded-md bg-cta px-5 py-3 tracking-wider transition-all hover:scale-105"
              >
                קבע שיחת הכירות
              </a>
            </div>
          </div>
        </div>
      </section>
      <!--  -->

      <div
        class="h-[400px] w-full bg-[url(/waves/2.svg)] bg-cover bg-repeat max-sm:h-[200px]"
      >
      </div>

      <!-- TESTIMONIALS -->
      <section
        id="expirience"
        class="px-18 w-full scroll-mt-20 space-y-5 bg-wedgewood p-5 text-center"
      >
        <h1 class="mt-4 font-heebo text-6xl font-black text-white xl:text-8xl">
          לקוחות <span class="text-cta">מרוצים</span>
        </h1>

        <section>
          <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
            <div
              class="[column-fill:_balance] sm:columns-2 sm:gap-6 lg:columns-3 lg:gap-8"
            >
              <VideoReview
                name="אילנית קיצוני-צילום באהבה"
                pfp="https://infermi.github.io/ilanit/us.jpg"
                video="ilanit.mp4"
                website="https://infermi.github.io/ilanit"
              />
              <VideoReview
                name="פלג אליקו-כלבן"
                pfp="https://infermi.github.io/peleg/logo.png"
                video="peleg.mp4"
                website="https://infermi.github.io/peleg"
              />
              <TextReview
                name="דניאל-DPgarden"
                pfp="dpgarden.jpg"
                website="https://infermi.github.io/ar"
              >
                אני ממליץ בחום על המתכנת מאור שבנה את האתר שלי בצורה מקצועית
                מאוד. מאור הקשיב לכל בקשה שלי ודאג לכל הפרטים הקטנים כדי ליצור
                לי את האתר המדהים שיש לי היום. כמו כן, מאור עדכן את האתר כל פעם
                שרציתי לשנות משהו. הוא בחור מדהים ומקצועי ואני ממליץ בחום על
                מאור לכל מי שמחפש בונה אתרים מקצועי
              </TextReview>
            </div>
          </div>
        </section>
      </section>
      <!--  -->

      <div
        class="h-[400px] w-full bg-[url(/waves/1.svg)] bg-cover bg-repeat max-sm:h-[200px]"
      >
      </div>

      <!-- CONTACT -->
      <Contact />
      <!--  -->
    </main>

    <footer class="bg-slate-800 shadow-xl">
      <div
        class="container mx-auto w-full p-4 text-slate-200 md:flex md:items-center md:justify-between md:p-6"
      >
        <span>
          עוצב על ידי <a
            href="https://www.facebook.com/profile.php?id=100090172908011"
            class="text-lg font-semibold text-cta hover:underline"
            >מאור רחמיאל</a
          >
        </span>
      </div>
    </footer>

    <script
      src="https://unpkg.com/@material-tailwind/html@latest/scripts/ripple.js"
    ></script>
    <!-- Accessibility Code for "infermi.github.io" -->
